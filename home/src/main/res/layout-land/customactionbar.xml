<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logoImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/news_block_bg" >

    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/logo_bg"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:src="@drawable/ic_logo" />

    <ImageView
        android:id="@+id/fullsite"
        style="@android:style/Widget.DeviceDefault.ActionButton"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:background="@drawable/logo_bg"
        android:padding="2dp"
        android:src="@drawable/ic_location_web_site" />

    <ImageView
        android:id="@+id/sms_ico"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/fullsite"
        android:background="@drawable/logo_bg"
        android:padding="2dp"
        android:src="@drawable/ic_action_sms_normal" />

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/sms_ico"
        android:background="@drawable/logo_bg"
        android:padding="2dp"
        android:src="@drawable/ic_action_share"
        android:visibility="gone" />

</RelativeLayout>