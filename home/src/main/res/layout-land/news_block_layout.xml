<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsblockcontainer"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/news_block_bg"
    android:padding="5dp" >

    <com.youm7.news.Youm7TextView
        android:id="@+id/news_title_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/newsimageview"
        android:ellipsize="end"
        android:gravity="top|right"
        android:maxLines="4"
        android:padding="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="news_title_textview"
        android:textColor="@color/Youm7Red"
        android:textSize="18dp" />

    <com.youm7.news.Youm7TextView
        android:id="@+id/sec_news_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_title_textview"
        android:layout_toLeftOf="@+id/newsimageview"
        android:drawableRight="@drawable/sec_date"
        android:gravity="right|center_vertical"
        android:padding="5dp"
        android:paddingRight="85dp"
        android:textColor="#000000"
        android:textSize="11sp" />

    <com.youm7.news.Youm7TextView
        android:id="@+id/news_abstract_textview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/sec_news_date"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:lines="3"
        android:maxLines="3"
        android:padding="5dp"
        android:text="Youm7TextView"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/newsimageview"
        android:layout_width="75dp"
        android:layout_height="110dp"
        android:layout_alignParentRight="true"
        android:background="#cccccc"
        android:padding="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/loader_sec" />

</RelativeLayout>