<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsblockcontainer"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:background="@color/news_block_bg"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/newsimageview"
        android:layout_width="75dp"
        android:layout_height="110dp"
        android:layout_alignParentRight="true"
        android:background="@color/top_news_bg"
        android:scaleType="fitXY" />

    <com.youm7.newsapp.Youm7TextView
        android:id="@+id/news_title_textview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/newsimageview"
        android:ellipsize="end"
        android:gravity="top|right"
        android:maxLines="4"
        android:padding="5dp"
        android:text="news_title_textview"
        android:textColor="@color/Youm7Red"
        android:textSize="18dp" />

    <com.youm7.newsapp.Youm7TextView
        android:id="@+id/news_abstract_textview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newsimageview"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:lines="3"
        android:maxLines="3"
        android:padding="5dp"
        android:text="Youm7TextView"
        android:textColor="@android:color/black" />

</RelativeLayout>