<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<FrameLayout
    android1:id="@+id/FragHolder"
    android1:layout_width="match_parent"
    android1:layout_height="match_parent" >

    <fragment
        android1:id="@+id/home_fragment"
        android1:name="com.youm7.newsapp.HomeFragment"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" />
</FrameLayout>
    <ListView
        android1:id="@+id/drawer_listview"
        android1:layout_width="240dp"
        android1:layout_height="match_parent"
        android:layout_gravity="end"
        android1:background="@drawable/redbars_bg"
        android1:paddingLeft="5dp"
        android1:paddingRight="5dp" >

    </ListView>

</android.support.v4.widget.DrawerLayout>