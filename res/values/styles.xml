<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
       <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
        <item name="actionBarStyle">@style/myactiobar</item>
        <item name="background">@android:color/transparent</item>
        
         
          <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
    </style>
<style name="myactiobar" parent="@style/Widget.AppCompat.Light.ActionBar">
    
  <item name="background">@drawable/news_block_bg</item>
  
  <item name="displayOptions">showCustom</item>
 <item name="actionBarSize">100dp</item>
        <item name="android:actionBarSize">100dp</item>
    <item name="customNavigationLayout">@layout/customactionbar</item>
</style>

    <style name="homesectionstyle">
        <item name="android:background">#F0F0F0</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:lines">4</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
